<div class="container">
	<div class="row">
		<div class="col-sm-3"></div>
		<div class="col-sm-6">
			<h1>Sign In</h1>

			<% if flash[:error] %>
				<div class="alert alert-danger">
					<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
					<p><%= flash[:error] %></p>
				</div>
			<% end %>
			<% if flash[:notice] %>
				<div class="alert alert-success">
					<a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
					<p><%= flash[:notice] %></p>
				</div>
			<% end %>

			<%= simple_form_for(:session, :url => sessions_path) do |f| %>
				<%= f.input :email %>
				<%= f.input :password %>
				<%= f.button :submit, :class => 'pull-left' %>
			<% end %>
			<p><%= link_to 'Register', new_user_path,
	      		:class => 'btn btn-default pull-right'  %>
			</p>
			<div class="clear"></div>
		</div>
		<div class="col-sm-3"></div>
	</div>
</div>
