<div class="container">
	<div class="row">
		<div class="col-sm-4"></div>
		<div class="col-sm-4">
			<h1>Users Registration</h1>
			<% if flash[:notice] %>
				<div class="alert alert-danger">
				  <strong>Alert:</strong><%= flash[:notice] %>
				</div>
			<% end %>
			<%= simple_form_for(@user) do |f| %>
				<%= f.input :name %>
				<%= f.input :email %>
				<%= f.input :password %>
				<%= f.input :password_confirmation %>
				<%= f.button :submit, :class => 'pull-left' %>
			<% end %>
			<p><%= link_to 'Login', new_session_path,
	      		:class => 'btn btn-default pull-right'  %>
			</p>
			<div class="clear"></div>
		</div>
		<div class="col-sm-4"></div>
	</div>
</div>