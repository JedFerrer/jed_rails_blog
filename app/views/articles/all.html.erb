<div class="container">
	<div class="row pad-bottom-50">
		<div class="col-sm-3">
			<h2>Home</h2>
			<% if @user %>
				<h3><%= link_to @user.name, user_articles_path(@user) %></h3>
				<p><%= @user.email %></p>
			<% end %>
		</div>
		<div class="col-sm-7">
				<div class="row">
					<div class="col-sm-12">
						<% @articles.each do |article| %>
							<% if !article.title.nil? %>
								<div class="pad-top-bottom-10">
								  <p>
								    <strong>Title:</strong>
								    <%= article.title %>
								  </p>
								  <p>
								    <strong>Content:</strong>
								    <%= truncate(article.text, length: 250, omission: "... %s") % link_to('Read more', user_article_path(article.user_id, article.id)) %>
								  </p>
								  <h5 class="list-group-item-headingclass post-info "> 
										<%= article.created_at.strftime("%d %b %y") %>
										<span class="author-name">
											<%= link_to article.user.name, user_articles_path(article.user_id) %>
										</span>
									</h5>

								  <% if @user && @user.id == article.user_id %>
									  <p>
											<%= link_to 'Edit', edit_user_article_path(@user, article) %>
											<%= link_to 'Delete', [article.user, article],
						              method: :delete,
						              data: { confirm: 'Are you sure?' } %>
									  </p>
								  <% end %>
								</div>

							  <% else %>
									<div class="main-post-container">
										<div class="list-group-item">
											<p>Unfortunately, there are no articles to show.</p>
										</div>
									</div>
						  <% end %>
						<% end %>
					</div>
				</div>
		</div>
		<div class="col-sm-2">
			<% if @user %>
				<p><%= link_to 'Sign Out', session_path(@user),
		      method: :delete,
		      data: { confirm: 'Are you sure?' }, :class => 'btn btn-primary'  %>
				</p>
			<% else %>
				<p><%= link_to 'Register', new_user_path %></p>
				<p><%= link_to 'Login', new_session_path %></p>
			<% end %>
		</div>
	</div>
</div>
